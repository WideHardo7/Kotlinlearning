<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.GlossaryFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/glossario"
                android:layout_width="match_parent"

                android:layout_height="242dp"
                android:background="@drawable/contorno3"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/glossario"
                android:textColor="@color/cardview_dark_background"
                android:textSize="34sp" />

            <Button
                android:id="@+id/g_b_variabili"
                android:layout_width="match_parent"
                android:layout_marginBottom="-5dp"
                android:layout_height="54dp"
                android:contentDescription="@string/b.variabili"
                android:background="@drawable/contorno3"
                android:text="@string/b.variabili"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:layout_marginTop="0dp"
                android:layout_marginBottom="-5dp"
                android:id="@+id/g_b_stringhe"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:contentDescription="@string/b.strighe"
                android:background="@drawable/contorno3"
                android:text="@string/b.strighe"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_cicli"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/contorno3"
                android:text="@string/b.cicli"
                android:contentDescription="@string/b.cicli"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_funzioni"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/contorno3"
                android:contentDescription="@string/b.funzioni"
                android:text="@string/b.funzioni"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_null"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/contorno3"
                android:text="@string/b.null_safety"
                android:contentDescription="@string/b.null_safety"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_array"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:contentDescription="@string/b.array"
                android:background="@drawable/contorno3"
                android:text="@string/b.array"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_classi"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:contentDescription="@string/b.classi"
                android:background="@drawable/contorno3"
                android:text="@string/b.classi"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_ereditarietà"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:contentDescription="@string/b.ereditarietà"
                android:layout_height="54dp"
                android:background="@drawable/contorno3"
                android:text="@string/b.ereditarietà"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <Button
                android:id="@+id/g_b_lambda"
                android:layout_marginBottom="-5dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/contorno3"
                android:contentDescription="@string/b.lambda"
                android:text="@string/b.lambda"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="#00FFFFFF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>